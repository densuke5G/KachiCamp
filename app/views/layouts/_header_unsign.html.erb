<div class="d-flex flex-wrap">
  <i class="fas fa-search ms-2" style=" margin-top: 12px; margin-left: 8px; position:absolute;"></i>
  <div class="form-group form-inline">
    <%= search_form_for @q, url: search_campgrounds_path do |f| %>
      <%= f.search_field :name_or_tags_tag_name_cont, class: "form-control px-4", placeholder: ' タグ・名前で検索' %>
      <%= f.submit '検索', class: "form-control" %>
    <% end %>
  </div>
  <div class="btn-group" role="group" aria-label="Basic mixed styles example">
    <li class="nav-item">
      <%= link_to campgrounds_path, class: 'nav-link text-dark' do %>
        <i class="fas fa-campground"></i> キャンプ場一覧
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to users_guest_sign_in_path, method: :post, class: 'nav-link text-dark' do %>
        <i class="fas fa-user-tie"></i> ゲストログイン
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to new_user_registration_path, class: 'nav-link text-dark' do %>
        <i class="fas fa-solid fa-user-plus"></i> 新規登録
      <% end %>
    </li>
    <li class="nav-item">
      <%= link_to user_session_path, class: 'nav-link text-dark' do %>
        <i class="fas fa-sign-in-alt"></i>ログイン
      <% end %>
    </li>
  </div>
</div>