<div class="container">
  <div class="row mb-1">
    <div class="text-center">
      <%= link_to "気になるキャンプ場", favorite_users_path, class: "btn btn_orange rounded-pill w-50 m-auto my-2" %>
      <%= link_to "投稿レビュー", reviews_path, class: "btn btn_water rounded-pill w-50 m-auto my-2" %>
      <%= link_to "キャンプ場申請状況", status_campgrounds_path, class: "btn btn_orange rounded-pill w-50 m-auto my-2" %>
      <%= link_to "お問い合わせはこちら", new_contact_path, class: "btn btn_water rounded-pill w-50 m-auto my-2" %>
     </div>
  </div>
  <div class="row text-center p-1">
    <h3>登録情報</h3>
  </div>
  <div class="row mb-1">
    <% if current_user.profile_image.blank? %>
      <%= image_tag 'no_image.jpg', class:"rounded-circle", size:"150x150" %>
    <% elsif current_user.profile_image.attached? %>
      <%= image_tag current_user.profile_image, class:"rounded-circle", size:"150x150" %>
    <% end %>
  </div>
  <div class="row mb-2">
    <div class="col-5 text-left pl-2">
      <p>ユーザー名</p>
    </div>
    <div class="col-5 text-left px-0">
      <%= current_user.name %>
    </div>
  </div>
  <div class="row mb-2">
    <%= link_to "編集する", edit_users_path, class: "btn btn_orange rounded-pill w-50 m-auto my-2success my-2" %>
  </div>
</div>