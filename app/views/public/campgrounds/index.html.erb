<div class="container">
  <div class="row p-1">
    <h2>キャンプ場一覧</h2>
  </div>
  <div class="row">
    <% @campgrounds.each do |campground| %>
    <!--承認ステータスが承認済のもののみ表示-->
      <% if campground.is_confirmed = 1 %>
        <div class="col-sm-12 col-md-6 col-lg-6 col-xl-4">
          <div class="card shadow bg-white rounded my-5">
            <% if campground.image.blank? %>
              <%= link_to campground_path(campground) do %>
                <%= image_tag 'camping-icon.png', size:"350x350" %>
              <% end %>
            <% elsif campground.image.attached? %>
              <%= link_to campground_path(campground) do %>
                <%= image_tag campground.image, size:"350x350" %>
              <% end %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">
                <%= campground.name %>
              </h5>
              <div class="rating d-flex align-items-center m-2">
                <%#= image_tag "star-on.png",class: "me-2" %><%#= rating(campground.reviews) %>
              </div>

              <div class="row mb-2">
                <div class="col-5 text-left pl-2">
                  <p>タグ</p>
                </div>
                <div class="col-5 text-left px-0">
                  <% campground.tags.each do |tag| %>
                    <i class="fas fa-tag"><%= tag.tag_name %></i>
                  <% end %>
                </div>
              </div>

              <div class="row mb-2">
                <div class="col-5 text-left pl-2">
                  <p>住所</p>
                </div>
                <div class="col-5 text-left px-0">
                  <%= campground.address %>
                </div>
              </div>

              <div class="row mb-2">
                <div class="col-5 text-left pl-2">
                  <p>電話番号</p>
                </div>
                <div class="col-5 text-left px-0">
                  <%= campground.phone_number %>
                </div>
              </div>

              <div class="row mb-2">
                <div class="col-5 text-left pl-2">
                  <p>チェックイン</p>
                </div>
                <div class="col-5 text-left px-0">
                  <%= campground.check_in %>
                </div>
              </div>

              <div class="row mb-2">
                <div class="col-5 text-left pl-2">
                  <p>チェックアウト</p>
                </div>
                <div class="col-5 text-left px-0">
                  <%= campground.check_out %>
                </div>
              </div>

              <div class="row mb-2">
                <div class="col-5 text-left pl-2">
                  <p>最寄り駅</p>
                </div>
                <div class="col-5 text-left px-0">
                  <%= campground.station_line %>線<br>
                  <%= campground.station_name %>駅<br>
              徒歩<%= campground.station_walk %>分
                </div>
              </div>

              <div class="row mb-2">
                <div class="col-5 text-left pl-2">
                  <p>最寄りバス停</p>
                </div>
                <div class="col-5 text-left px-0">
                  <%= campground.busstop_line %><br>
                  <%= campground.busstop_name %>バス停<br>
              徒歩<%= campground.busstop_walk %>分
                </div>
              </div>

            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

